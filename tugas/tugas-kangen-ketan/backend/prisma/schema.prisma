generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ======================================
// 1. MODEL KATEGORI (Tabel Rujukan)
// ======================================
model Category {
  id       Int      @id @default(autoincrement())
  name     String   @db.VarChar(100)
  products KangenKetanProduct[] // Relasi balik ke model Product

  @@map("categories") // Nama tabel di database
}


// ======================================
// 2. MODEL PRODUK (Tabel Utama)
// ======================================
model KangenKetanProduct {
  id             Int       @id @default(autoincrement())
  sku            String    @unique @db.VarChar(50) // Stock Keeping Unit
  name           String    @db.VarChar(255)
  slug           String    @unique @db.VarChar(255) // URL friendly name
  description    String?   @db.Text
  price          Decimal   @db.Decimal(10, 2)
  stockQuantity  Int       @default(0) @map("stock_quantity")
  imageUrl       String?   @map("image_url") @db.VarChar(255)
  isActive       Boolean   @default(true) @map("is_active")
  
  // Foreign Key dan Relasi
  categoryId     Int?      @map("category_id")
  category       Category? @relation(fields: [categoryId], references: [id])

  // Timestamps
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  // Opsional: Mendefinisikan nama tabel di database
  @@map("KangenKetanProducts") 
}
